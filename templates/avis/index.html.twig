{% extends 'base.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<link href="../assets/styleAvis.css" rel="stylesheet" type="text/css" />

<div class="main">
  <div class="mainform">
  {{ form_start(formAvis) }}
    <fieldset>
    <legend class="TitreFormulaire">Formulaire d'Avis</legend>
    <hr class="center_hr">
      <div class="formGroupNom">
        <label for="exampleInputNom1" class="form-label mt-4">{{ form_label(formAvis.nom) }}</label><br/>
        {{ form_widget(formAvis.nom) }}
      </div>
      <div class="form-group-prenom">
        <label for="exampleInputPrenom1" class="form-label mt-4">{{ form_label(formAvis.prenom) }}</label><br/>
        {{ form_widget(formAvis.prenom) }}
      </div>
      <div class="form-group-desc">
        <label for="zoneTextDescription" class="form-label mt-4">Description</label><br/>
        {{ form_widget(formAvis.avis) }}
      </div>
      <button type="submit" class="btn btn-primary" href="#">Envoyer</button>

  {{ form_end(formAvis) }}
  </div>
</div>

{% endblock %}
