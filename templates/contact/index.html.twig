{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<!-- Création du menu -->

<form>
  <fieldset>
    <legend>Formulaire de Contact</legend>
    <div class="form-group">
      <label for="exampleInputNom1" class="form-label mt-4">Nom</label>
      <input type="nom" class="form-control" id="exampleInputNom1" aria-describedby="nomHelp" placeholder="Entrer votre adresse nom ici" data-bcup-score="18" data-bcup="attached" style="padding-right: 42.4px;">
    </div>
    <div class="form-group">
      <label for="exampleInputPrenom1" class="form-label mt-4">Prenom</label>
      <input type="prenom" class="form-control" id="exampleInputPrenom1" aria-describedby="prenomHelp" placeholder="Entrer votre adresse prenom ici" data-bcup-score="18" data-bcup="attached" style="padding-right: 42.4px;">
    </div>
    <div class="form-group">
      <label for="exampleInputNum1" class="form-label mt-4">Numéro</label>
      <input type="num" class="form-control" id="exampleInputNum1" aria-describedby="numHelp" placeholder="Entrer votre adresse numéro ici" data-bcup-score="18" data-bcup="attached" style="padding-right: 42.4px;">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrer votre adresse email ici" data-bcup-score="18" data-bcup="attached" style="padding-right: 42.4px;">
    </div>
    <div class="form-group">
      <label for="motif1" class="form-label mt-4">Motif de la demande</label>
      <select class="form-select" id="motif1">
        <option>Motif 1</option>
        <option>Motif 2</option>
        <option>Motif 3</option>
        <option>Motif 4</option>
        <option>Motif 5</option>
      </select>
    </div>
    <div class="form-group">
      <label for="zoneTextDescription" class="form-label mt-4">Description</label>
      <textarea class="form-control" id="zoneTextDescription" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="formFile" class="form-label mt-4">Joindre un Fichier ici</label>
      <input class="form-control" type="file" id="formFile">
    </div>
    <fieldset class="form-group">
      <legend class="mt-4">Radio buttons</legend>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
        <label class="form-check-label" for="optionsRadios1">
          Option one is this and that—be sure to include why it's great
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
        <label class="form-check-label" for="optionsRadios2">
          Option two can be something else and selecting it will deselect option one
        </label>
      </div>
      <div class="form-check disabled">
        <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios3" value="option3" disabled="">
        <label class="form-check-label" for="optionsRadios3">
          Option three is disabled
        </label>
      </div>
    </fieldset>
</form>

{% endblock %}
